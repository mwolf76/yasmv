#word-width 8
MODULE array;

VAR
    space: boolean[9];
    r, c : uint;

#hidden
DEFINE _ := FALSE;

#hidden
DEFINE O := TRUE;

INVAR
    space = [ O, O, O,
    	      O, O, O,
	      O, O, _ ];

DEFINE
    addr := 3 * r + c;

INVAR
    0 <= r && r < 3;

INVAR
    0 <= c && c < 3;

INIT
    ! space[addr];
